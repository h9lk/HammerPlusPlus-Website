{
  "name": "HammerPlusPlus-Website",
  "version": "1.0.0",
  "main": "main.js",
  "repository": "git@github.com:h9lk/HammerPlusPlus-Website.git",
  "author": "ficool2",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "lin:stylelint": "stylelint \"src/sass/*.scss\" --syntax scss",
    "lint:fix": "eslint . --fix && prettier --write --list-different .",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "src/*.html",
    "src/js/*.js",
    "src/img/*.svg",
    "src/sass/*.scss"
  ],
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "postcss": "^8.4.49",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.4.2",
    "sass": "^1.81.0",
    "sass-loader": "^16.0.3",
    "stylelint": "^16.10.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "vite": "^6.0.7"
  }
}
